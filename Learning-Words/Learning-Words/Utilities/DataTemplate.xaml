<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Learning_Words.ViewModel"
                    xmlns:view="clr-namespace:Learning_Words.View">

    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DictionaryVM}">
        <view:Dictionary />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TestVM}">
        <view:Test />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:ChapterVM}">
        <view:Chapter />
    </DataTemplate>
    
</ResourceDictionary>